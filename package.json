{
  "name": "ai-writing-assistant",
  "version": "1.0.0",
  "description": "AI Writing Assistant with React frontend and Node.js backend",
  "scripts": {
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && npm run start",
    "frontend": "cd frontend && npm start",
    "install-all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "build": "cd frontend && npm run build",
    "serve": "npx serve -s frontend/build",
    "postinstall": "cd backend && npm install && cd ../frontend && npm install",
    "render-postbuild": "cd frontend && npm run build"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "keywords": [
    "ai",
    "writing",
    "assistant",
    "react",
    "node"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "serve": "^14.2.1"
  }
} 