{
  "name": "ai-writing-assistant",
  "version": "1.0.0",
  "description": "AI Writing Assistant with React frontend and Node.js backend",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && npm run start",
    "frontend": "cd frontend && npm start",
    "install-all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "build": "cd frontend && npm run build"
  },
  "keywords": [
    "ai",
    "writing",
    "assistant",
    "react",
    "node"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "node-fetch": "^2.6.7",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 